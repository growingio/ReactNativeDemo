    "conventional-changelog-cli": "^2.0.12",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^5.16.0",
    "eslint-config-satya164": "^2.3.5",
