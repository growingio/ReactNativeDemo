    "prettier": "^1.8.2",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-native": "~0.57.1",
    "react-native-reanimated": "^1.0.0-alpha.12",
    "react-navigation": "^3.3.2",
    "react-test-renderer": "16.5.0",
    "release-it": "^10.3.1"
  },
  "peerDependencies": {
    "@react-navigation/core": "^3.4.0",
    "@react-navigation/native": "^3.0.0",
    "react": "*",
    "react-native": "*",
