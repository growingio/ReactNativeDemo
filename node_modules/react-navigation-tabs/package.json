{
  "name": "react-navigation-tabs",
  "version": "2.1.3",
  "description": "Tab Navigation components for React Navigation",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "scripts": {
    "test": "jest",
    "flow": "flow",
    "lint": "eslint .",
    "bootstrap": "yarn && yarn --cwd example",
    "example": "yarn --cwd example",
    "release": "yarn release-it"
